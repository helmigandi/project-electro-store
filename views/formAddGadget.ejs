<%- include('partials/header', { pageName: 'Banana Gadget Store' }) %>

<section style="color: red;"> 
  <% errors.forEach(err => { %>
    <p><%= err %></p>
  <% }); %>
</section>

<div>
  <form action="/gadgets/add" method="post">
    <div style="padding: 20px;">
      <label for="name">Product Name: </label>
      <input type="text" placeholder="e.g: Macbook Pro M1" name="name" id="name" value="<%= dataValue.name %>">
    </div>
    <div style="padding: 20px;">
      <label for="price">Price: </label>
      <input type="number" placeholder="e.g: 13000000" step="0.01" name="price" id="price" value="<%= dataValue.price %>">
    </div>
    <div style="padding: 20px;">
      <label for="stock">Stock: </label>
      <input type="number" placeholder="e.g: 20" name="stock" id="stock" value="<%= dataValue.stock %>">
    </div>
    <div style="padding: 20px;">
      <label for="description">Description: </label>
      <textarea name="description" id="description" cols="30" rows="10" placeholder="Spesifikasi Product"><%= dataValue.description %></textarea>
    </div>
    <div style="padding: 20px;">
      <input type="submit" value="Add new Gadget">
    </div>
  </form>
</div>
